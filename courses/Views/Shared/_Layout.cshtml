<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" asp-append-version="true">
    <link rel="stylesheet" href="./css/style.css" asp-append-version="true" />
@*     <link rel="stylesheet" href="~/css/aboutCompany.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/aboutUs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/price.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/result.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signIn.css" asp-append-version="true" /> *@

</head>
<body>
    <!-- header -->
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-3 col-md-6">
                    <h2 class="title-h2">
                        <img src="./img/logo.svg.svg" alt="">
                        <a class="title" href="#">Военные курсы</a>
                    </h2>
                </div>

                <div class="col-xl-6 col-lg-6 d-none d-lg-block">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AboutUs" asp-action="Index">О компании</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">О нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Отзывы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Курсы</a>
                        </li>
                    </ul>
                </div>

                <div class="col-xl-3 col-lg-3 col-md-6 col-6 d-none d-lg-block">
                    <div class="nav-connect">
                        <a class="login-button" href="#">Вход</a>
                        <a class="sign-button" href="#">Регистрация</a>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6 col-6 d-lg-none d-flex justify-content-end">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="./img/icons8-меню-30.png" alt="">
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" href="#">О компании</a></li>
                            <li><a class="dropdown-item" href="#">О нас</a></li>
                            <li><a class="dropdown-item" href="#">Отзывы</a></li>
                            <li><a class="dropdown-item" href="#">Курсы</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end-header -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer -->
    <footer class="p-3 bg-dark text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-md-4 col-sm-6 col-12 pb-lg-0 pb-md-5 pb-sm-5 pb-5">
                    <h4>Каталог</h4>
                    <nav>
                        <ul>
                            <li>
                                <a href="#">О компании</a>
                            </li>
                            <li>
                                <a href="#">О нас</a>
                            </li>
                            <li>
                                <a href="#">Отзывы</a>
                            </li>
                            <li>
                                <a href="#">Курсы</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-xl-4 col-md-4 col-sm-6 col-12 pb-lg-0 pb-md-5 pb-sm-5 pb-5">
                    Контакты
                </div>
                <div class="col-xl-2 col-md-4 col-sm-6 col-12 pb-lg-0 pb-md-5 pb-sm-5 pb-5">
                    Адрес
                </div>
            </div>
        </div>
    </footer>
    <!-- end-footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/bootstrap.bundle.min.js"></script>     
    

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
