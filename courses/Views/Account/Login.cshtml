@using courses.ViewModels;
@model LoginViewModel

<!-- main -->
<section class="main">
    <div class="container">
        <form asp-action="Login" class="ui-form">
            <h3>Вход в аккаунт</h3>
            @if (TempData["Error"] != null)
            {
                <div>
                    <span><b>Извините!</b> - @TempData["Error"]</span>
                </div>
            }
            <div class="form-row">
                <input asp-for="EmailAddress" type="email" id="email" required autocomplete="off" placeholder="Почта">
            </div>
            <div class="form-row">
                <input asp-for="Password" type="password" id="password" required autocomplete="off" placeholder="Пароль">
            </div>
            <p>
                <input type="submit" value="Войти">
            </p>
        </form>
    </div>
</section>
<!-- end-main -->