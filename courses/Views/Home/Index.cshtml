@using courses.ViewModels;
@model HomeViewModel;

<!-- main -->
<section class="main">
    <div class="container">
        <div class="main_information">
            <div class="d-flex flex-column">
                <div class="col-xl-8 col-lg-6 col-md-6 col-sm-12">
                    <h1 class="main-title">ОБЪЕДИНЕННЫЙ ЦЕНТР ПАТРИОТИЧЕСКОГО ВОСПИТАНИЯ!</h1>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                    <span class="main-span">«Каскад» (ОЦПВ «Каскад») был создан в 1982 году на базе Комсомольского военно-спортивного клуба «Орленок». </span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end-main -->
<!-- news-container -->
<section class="news">
    <div class="container">
        <div class="row">
            <div class="news-main-text col-12 text-center">
                <h1>Последние новости</h1>
            </div>
            <div class="main-news-card col-xl-7 col-12">
                <div class="card">
                    <img src="./img/каскад новости.jpg" class="card-img-top" alt="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Непоколебимое задание</h5>
                        <p class="card-text">Бойцы, стоящие на защите нашей Родины и мы выражаем огромную благодарность всем, кто принял участие в сборе!!!! Груз и автомобили переданы на самые "горячие" направления!!!</p>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column col-xl-5 col-12">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-5 col-sm-4">
                            <img src="assets/images/bs-images/img-3x4.png" class="img-fluid w-100" alt="card-horizontal-image">
                        </div>
                        <div class="col-7 col-sm-8">
                            <div class="card-body">
                                <h5 class="card-title">Тайтл новости</h5>
                                <p class="card-text">описание новости</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end-news-container -->
<!-- text-information -->
<section class="coach-section">
    <div class="container">
        <div class="row align-items-center">
            <!-- courses -->
            <div class="course-description">
                <h1 class="course-text">Программа обучения включает в себя следующие дисциплины: </h1>
            </div>
            <!-- end-courses -->
            <div class="text-information d-flex">
                <div class="col-xl-4 col-lg-4 col-md-5 col-5">
                    <p>-общевойсковая тактика;</p>
                    <p>-тактико-специальная подготовка; </p>
                    <p>-огневая (стрелковая) подготовка;</p>
                    <p>-физическая подготовка и рукопашный бой;</p>
                    <p>-строевая подготовка;</p>
                    <p>-уставы ВС РФ;</p>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-5 col-5 text-end">
                    <p>-военная топография;</p>
                    <p>-альпинистская подготовка;</p>
                    <p>-доврачебная помощь;</p>
                    <p>-инженерная подготовка;</p>
                    <p>-РХБ защита;</p>
                    <p>-общественно-государственная подготовка;</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end-text-information -->
<!-- photo-information     -->
