@using courses.Models;
@model Courses;

<form asp-action="DeleteCourses" asp-route-id="" method="post">

    <h1>Вы уверены, что хотите удалить данный курс?</h1>
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input readonly asp-for="Name" type="text" class="form-control" placeholder="Введите название курса">
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">Короткое описание</label>
        <input readonly asp-for="ShortDescription" type=" text" class="form-control" placeholder="Введите короткое описание курса">
    </div>
    <div class="form-group">
        <label asp-for="LongDescription">Длинное описание</label>
        <textarea readonly asp-for="LongDescription" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Img">Фотография</label>
        <input readonly asp-for="Img" type=" text" class="form-control" placeholder="Выберите фотографию">
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <input readonly asp-for="Price" type="number" step="0.10" class="form-control" placeholder="Введите цену курса">
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Категория</label>
        <select readonly asp-for=CategoryId class="form-control form-control-sm">
            <option>CategoryName</option>
        </select>
    </div>


</form>
<form asp-action="DeleteCourses" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Подтвердить" class="btn btn-primary">
</form>
