@using courses.ViewModels;
@model CreateNewsViewModel;

<form asp-action="CreateNews">
    <div class="form-group">
        <label asp-for="Title">Название</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Введите название новости">
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" type=" text" class="form-control" placeholder="Введите описание новости">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>