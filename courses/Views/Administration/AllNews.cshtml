@using courses.ViewModels;
@model AllNewsViewModel;

<H1><a asp-controller="Administration" asp-action="CreateNews">Создать</a></H1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.News)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><a asp-controller="Administration" asp-action="EditNews" asp-route-id="@item.Id">Редактировать</a> <a asp-controller="Administration" asp-action="DeleteNews" asp-route-id="@item.Id">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>